# Local RAG WebApp Configuration
# Copy this file to .env and customize for your setup

# Performance Profile
# Options: eco, balanced, performance
RAG_PROFILE=balanced

# Server Configuration
RAG_HOST=127.0.0.1
RAG_PORT=8000
RAG_DEBUG=false

# Data Directory (where documents and indices are stored)
# Default: ~/RAGApp
RAG_DATA_DIR=~/RAGApp

# External Services
QDRANT_URL=http://localhost:6333
OLLAMA_HOST=http://localhost:11434

# Model Configuration
RAG_LLM_MODEL=llama3.2:3b
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# RAG Parameters
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=200
RAG_MAX_CONTEXT_TOKENS=4000

# Security (optional)
# RAG_ENCRYPTION_KEY=your-32-char-encryption-key-here

# Logging
# Set to true for verbose logging during development
# RAG_DEBUG=true
